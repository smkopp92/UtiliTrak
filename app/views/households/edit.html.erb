<% if user_signed_in? %>
  <h1>This is where we'll update a household</h1>

  <%= form_for(@household) do |f| %>
    <%= f.label :address %>
    <%= f.text_field :address, value: @household.address %>
      <br>
    <%= f.label :city %>
    <%= f.text_field :city, value: @household.city %>
      <br>
    <%= f.label :state %>
    <%= f.text_field :state, value: @household.state %>
      <br>
    <%= f.label :zip %>
    <%= f.text_field :zip, value: @household.zip %>
      <br>
    <%= f.submit "Update Household" %>
  <% end %>

  <%= link_to "Back to Home Page", root_path %>
<% else %>
  <h2>Need to be signed in to update household!</h2>
<% end %>
