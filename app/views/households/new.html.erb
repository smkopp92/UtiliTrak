<% if user_signed_in? %>
  <h1>Create a New Household</h1>

  <%= form_for(@household) do |f| %>
    <%= f.label :address %>
    <%= f.text_field :address %>
      <br>
    <%= f.label :city %>
    <%= f.text_field :city %>
      <br>
    <%= f.label :state %>
    <%= f.text_field :state %>
      <br>
    <%= f.label :zip %>
    <%= f.text_field :zip %>
      <br>
    <%= f.submit "Create Household" %>
  <% end %>

  <%= link_to "Back to Home Page", root_path %>
<% else %>
  <h2>Need to be signed in to add a house!</h2>
<% end %>
